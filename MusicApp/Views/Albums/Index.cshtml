<link href="~/Content/AlbumStyle.css" rel="stylesheet" />

@model IEnumerable<MusicApp.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Albums</h2>

@foreach (var item in Model)
{
    <figure class="image-hover">
        <div class="image">
            <img src="@Html.DisplayFor(modelItem => item.Photo)" class="thumb" alt="sample55" />
        </div>
        <figcaption class="header">
            <h4 class="title"> @Html.DisplayFor(modelItem => item.Artist.ArtistName)</h4>
            <div class="description">
            <div>@Html.ActionLink("Edit", "Edit", new { id = item.AlbumID })<br /> </div>
            <div> @Html.ActionLink("Details", "Details", new { id = item.AlbumID }) </div>
            <div> @Html.ActionLink("Delete", "Delete", new { id = item.AlbumID }) </div>
            </div>
        </figcaption><a href="#"></a>
    </figure>
}



